{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": true,
  "description": "Filters to refine signal discovery results",
  "properties": {
    "catalog_types": {
      "description": "Filter by catalog type",
      "items": {
        "$ref": "../enums/signal-catalog-type.json"
      },
      "minItems": 1,
      "type": "array"
    },
    "data_providers": {
      "description": "Filter by specific data providers",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "type": "array"
    },
    "max_cpm": {
      "description": "Maximum CPM price filter",
      "minimum": 0,
      "type": "number"
    },
    "min_coverage_percentage": {
      "description": "Minimum coverage requirement",
      "maximum": 100,
      "minimum": 0,
      "type": "number"
    }
  },
  "title": "Signal Filters",
  "type": "object"
}